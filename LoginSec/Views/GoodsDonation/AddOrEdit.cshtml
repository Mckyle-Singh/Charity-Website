@model LoginSec.Models.GoodsDonation

@{
   ViewData["PageTitle"] = Model.GoodsId==0?"Make a new Donation":"Edit Donation";
}

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="GoodsId" value="@Model.GoodsId"/>
                <div class="mb-3">
                   <ejs-dropdownlist id="ddlCategory" ejs-for="CategoryId"
                        dataSource="@ViewBag.Categories" placeholder="Category"
                        floatLabelType="Always" allowFiltering="true"ignoreAccent="true"filterType="Contains">
                        <e-dropdownlist-fields value="CategoryId" text="TitleWithIcon"></e-dropdownlist-fields>
                      </ejs-dropdownlist>
                       <span asp-validation-for="CategoryId" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-numerictextbox id="numItems" ejs-for="NumItems" placeholder="No. of Items"
                        floatLabelType="Always" min="0"  format="0"  >
                     </ejs-numerictextbox>
                    <span asp-validation-for="NumItems" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                     <ejs-textbox id="name" placeholder="Name" ejs-for="Name"
                        floatLabelType="Always">
                    </ejs-textbox>
                    <span asp-validation-for="Name" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                     <ejs-textbox id="itemDescription" placeholder=" Item Description" ejs-for="ItemDescription"
                        floatLabelType="Always" multiline="true">
                     </ejs-textbox>
                    <span asp-validation-for="ItemDescription" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <ejs-datepicker id="date" ejs-for="Date"
                        placeholder="Date" floatLabelType="Always"format="MMM-dd-yyyy">
                    </ejs-datepicker>
                    <span asp-validation-for="Date" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-button id="submit" type="submit" content="submit" cssClass="e-warning"></ejs-button>
                </div>
            </form>
        </div>
        
    </div>
<div class="col-md-5">
                <div class="widget h-100 d-flex justify-content-center align-items-center " 
                 style="background-color:#212b36">
                    <i class="fa-solid fa-money-bill-transfer fa-2xl " ></i>
                </div>
     </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
