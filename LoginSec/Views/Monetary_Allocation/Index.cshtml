@model IEnumerable<LoginSec.Models.Monetary_Allocation>

@{
    ViewData["PageTitle"] = "Monetary Allocation";
    ViewData["PageActionText"] = "Make New Monetary Allocation";
     ViewData["PageActionUrl"] = "/Monetary_Allocation/AddorEdit";
}

<div class="row">
    <div class="col-md-12">
        <ejs-grid id="goodsAllocations" dataSource="@Model" gridLines="None"
        allowSorting="true">
            <e-grid-columns>
                
                <e-grid-column headerText="Disaster" field="DisasterTitle"></e-grid-column>
                <e-grid-column headerText="Amount" field="Amount" width="110px" format="c2"></e-grid-column>
                <e-grid-column headerText="Actions"template="#actionColumnTemplate" width="150px"></e-grid-column>
           </e-grid-columns>
        </ejs-grid>
    </div>
</div>

<script id="actionColumnTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn btn-sm no-a-decoration" href="/Monetary_Allocation/AddorEdit/${MonetaryId}">
            <i class="fa-solid fa-pen fa-lg"></i>
        </a>
        <form action="/Monetary_Allocation/Delete/${MonetaryId}" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link no-a-decoration"
            onclick="    return confirm(&quot; are you sure you want to delete this record ?&quot;)" >
                <i class="fa-solid fa-trash-can fa-lg text-danger" ></i>
            </button>
        </form>
    </div>
</script>

