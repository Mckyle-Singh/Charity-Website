@{
    ViewData["Title"] = "Home Page";
}

<!-- Carousel Start -->
    <div class="container-fluid p-0 mb-5">
        <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="~/img/carousel-1.jpg" alt="Image">
                    <div class="carousel-caption">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-7 pt-5">
                                    <h1 class="display-4 text-warning mb-3 animated slideInDown">Let's Change The World With a Donation</h1>
                                    <p class="fs-5 text-white-50 mb-5 animated slideInDown">If you want your checkbook to follow your heart, make a donation to those doing work you support.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="img/carousel-2.jpg" alt="Image">
                    <div class="carousel-caption">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-7 pt-5">
                                    <h1 class="display-4 text-warning mb-3 animated slideInDown">Let's Save More Lifes With Our Helping Hand</h1>
                                    <p class="fs-5 text-white-50 mb-5 animated slideInDown">Between 2000 and 2012, natural disasters caused $1.7 trillion in damage and affected 2.9 billion people.</p>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <!-- Carousel End -->


    <!-- About Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-5">
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="position-relative overflow-hidden h-100" style="min-height: 400px;">
                        <img class="position-absolute w-100 h-100 pt-5 pe-5" src="img/about-1.jpg" alt="" style="object-fit: cover;">
                        <img class="position-absolute top-0 end-0 bg-white ps-2 pb-2" src="img/about-2.jpg" alt="" style="width: 200px; height: 200px;">
                    </div>
                </div>
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="h-100">
                        <h1 class="display-6 mb-5 text-warning">We Help People In Need Around The World</h1>
                        <div class=" border-bottom border-5 border-warning rounded p-4 mb-4">
                            <p class="text-white mb-2">“We ourselves feel that what we are doing is just a drop in the ocean. But the ocean would be less because of that missing drop.” </p>
                            <span class="text-warning">Mother Teresa</span>
                        </div>
                        <p class="mb-5">CharityHub's online donation platform has been assisting NGOs with online fundraising for over 210 years. We collaborate with NGOs of various sizes and types, including medical ,  community and disaster foundations. 
                            We provide online fundraising platforms for disaster relief </p>
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->