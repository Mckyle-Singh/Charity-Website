@model IEnumerable<LoginSec.Models.Disaster>

@{
    ViewData["PageTitle"] = "Disasters";
    ViewData["PageActionText"] = "Add New Disaster";
    ViewData["PageActionUrl"] = "/Disaster/AddorEdit";
}

<div class="row">
    <div class="col-md-12">
        <ejs-grid id="disaster" dataSource="@Model" gridLines="None"
        allowSorting="true">
            <e-grid-columns>
                <e-grid-column headerText="Type" field="DisasterType"></e-grid-column>
                <e-grid-column headerText="Location" field="DisasterLocation" width="150px"></e-grid-column>
                <e-grid-column headerText="Description" field="Description" width="150px"></e-grid-column>
                <e-grid-column headerText="Required Aids" field="RequiredAids" width="150px"></e-grid-column>
                <e-grid-column headerText="Start Date" field="StartDate" width="150px" type="date" format="MMM-dd-yy" 
                textAlign="Left"></e-grid-column>
                <e-grid-column headerText="End Date" field="EndDate" width="110px" type="date" format="MMM-dd-yy" 
                textAlign="Left"></e-grid-column>
                <e-grid-column headerText="Actions" template="#actionColumnTemplate" width="150px"></e-grid-column>
            </e-grid-columns>

        </ejs-grid>
    </div>
    @*<div class="col-md-5">
           <div class="widget h-100 d-flex justify-content-center align-items-center">
                <i class="fa-solid fa-shapes fa-2xl"></i>
           </div>
     </div>*@
</div>


                @*This is the scrit template for actions(edit and delete)*@
<script id="actionColumnTemplate" type="text/x-template">
  <div class="d-flex flex-row justify-content-start">
      <a class="btn btn btn-sm no-a-decoration" href="/Disaster/AddorEdit/${DisasterId}">
          <i class="fa-solid fa-pen fa-lg"></i>
      </a>
      <form action="/Disaster/Delete/${DisasterId}" method="post">
          @Html.AntiForgeryToken()
          <button type="submit" class="btn btn-sm btn-link no-a-decoration"
          onclick="    return confirm(&quot; are you sure you want to delete the record ?&quot;)" >
              <i class="fa-solid fa-trash-can fa-lg text-danger" ></i>
          </button>
      </form>
  </div>
  </script>
